doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h1=`Lista de articulos: ${cantidad}`
        lu 
            each art in articulosTabla 
                li 
                    a(href="/articulos/"+art.titulo)= art.nombre
            else 
                p No hay articulos por mostrar
            